@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
	<div class="screen">
		<div class="screen__content">
			<form class="logInForm" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<div asp-validation-summary="ModelOnly" class="text-warning text-error"></div>
				<div class="registerForm__field">
					<i class="registerForm__icon fas fa-user"></i>
					<input type="text" class="form__input" asp-for="Input.FirstName" aria-required="true" placeholder="First Name *" maxlength="100"/>
				              <br/>  <span asp-validation-for="Input.FirstName" class="text-warning text-error"></span>

                </div>
                <div class="registerForm__field">
					<i class="registerForm__icon fas fa-user"></i>
					<input type="text" class="form__input" asp-for="Input.LastName" aria-required="true" placeholder="Last Name *" maxlength="100"/>
				              <br/>  <span asp-validation-for="Input.LastName" class="text-warning text-error"></span>

                </div>
                <div class="registerForm__field">
					<i class="registerForm__icon fas fa-envelope "></i>
					<input type="text" class="form__input form__inputEmail" asp-for="Input.Email" aria-required="true" placeholder="Email *">
				              <br/>  <span asp-validation-for="Input.Email" class="text-warning text-error"></span>

                </div>
				<button class="button form__submit" id="registerSubmit" type="submit">
					<span class="button__text" >Register with your <strong class="text-success">@Model.ProviderDisplayName</strong>  account.</span>
					<i class="button__icon fas fa-chevron-right"></i>
				</button>	
               
			</form>
			
		</div>
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>		
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>		
	</div>
</div>
