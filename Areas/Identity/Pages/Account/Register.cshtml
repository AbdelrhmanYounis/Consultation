@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container mt-5">
	<div class="screen">
		<div class="screen__content">
			<form class="registerForm" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<div asp-validation-summary="ModelOnly" class="text-warning text-error" style="margin-left:-15px"></div>
				<div class="registerForm__field">
					<i class="registerForm__icon fas fa-user"></i>
					<input type="text" class="form__input" asp-for="Input.FirstName" aria-required="true" placeholder="First Name *" maxlength="100"/>
				              <br/>  <span asp-validation-for="Input.FirstName" class="text-warning text-error"></span>

                </div>
                <div class="registerForm__field">
					<i class="registerForm__icon fas fa-user"></i>
					<input type="text" class="form__input" asp-for="Input.LastName" aria-required="true" placeholder="Last Name *" maxlength="100"/>
				              <br/>
							  <span asp-validation-for="Input.LastName" class="text-warning text-error">
							  </span>

                </div>
                <div class="registerForm__field">
					<i class="registerForm__icon fas fa-envelope "></i>
					<input type="text" class="form__input form__inputEmail" asp-for="Input.Email" aria-required="true" placeholder="Email *">
				              <br/>  <span asp-validation-for="Input.Email" class="text-warning text-error"></span>

                </div>
				<div class="registerForm__field">
					<i class="registerForm__icon fas fa-lock"></i>
					<input type="password" asp-for="Input.Password"autocomplete="new-password" aria-required="true" class="form__input" placeholder="Password *">
				<br/>  <span asp-validation-for="Input.Password" class="text-warning text-error"></span>
                </div>
                <div class="registerForm__field">
					<i class="registerForm__icon fas fa-lock"></i>
					<input type="password" asp-for="Input.ConfirmPassword"autocomplete="new-password" aria-required="true" class="form__input" placeholder="Confirm Password *">
				<br/>  <span asp-validation-for="Input.ConfirmPassword" class="text-warning text-error"></span>
                </div>
				 
				<button class="button form__submit" id="registerSubmit" type="submit">
					<span class="button__text" >Register Now</span>
					<i class="button__icon fas fa-chevron-right"></i>
				</button>	
               
			</form>
			
		</div>
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>		
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>		
	</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
