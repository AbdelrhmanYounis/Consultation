@model Consultation.Pages.Counsel.CreateModel

@{
	ViewData["Title"] = "Create";
	var prices = (List<ProductPrice>)ViewData["Prices"];
	int counter = 1;
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
