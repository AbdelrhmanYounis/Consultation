                <label asp-for="Product.Title" class="control-label"></label>
                <input asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
			 <div class="form-group">
                <label asp-for="Product.ProductPrice" class="control-label"></label>
                <input asp-for="Product.ProductPrice" class="form-control" type="number" />
                <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">  
				@foreach (var item in prices)
				{
					if(counter==1)
					{
					<input id="a_@counter" type="radio"value="@item.Id" asp-for="Product.PriceId" class="radioInput" checked>		
					}
					else
					{
					<input id="a_@counter" type="radio"value="@item.Id" asp-for="Product.PriceId" class="radioInput">		
					}
				<label for="a_@counter"><span></span>@item.Title ? costs @item.Price L.E</label>
				counter++;
				}
