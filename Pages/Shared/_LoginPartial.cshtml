@using Consultation.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{    
    <li class="navbar__item">
      <a asp-page="/Counsel/Index" class="navbar__link"><i data-feather="users"></i><span>Counselors </span></a>        
    </li>
    <li class="navbar__item">
      <a asp-page="/Counsel/IndexById" class="navbar__link"><i data-feather="file-plus"></i><span>create Counsel</span></a>        
    </li>
     <li class="navbar__item">
      <a   class="navbar__link"><i data-feather="message-square"></i><span>Messages</span></a>        
    </li>
    <li class="navbar__item">
      <a asp-area="Identity" asp-page="/Account/Manage/Index" class="navbar__link"><i data-feather="settings"></i><span>Settings</span></a>        
    </li>
    <li class="navbar__item">
      <a asp-area="Identity" asp-page="/Account/Manage/DeletePersonalData" class="navbar__link">
          <i data-feather="user-x"></i><span>Delete Account</span></a>        
    </li>
   
    <li class="navbar__item">
        <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button class="navbar__link" type="submit" style="border:none;background:none"><i data-feather="user-minus"></i><span>Logout</span></button>
        </form>
    </li>
}
else
{
     <li class="navbar__item">
      <a asp-area="Identity" asp-page="/Account/Register" class="navbar__link">
          <i data-feather="user-plus"></i><span>Register</span></a>
    </li>
    <li class="navbar__item">
      <a asp-area="Identity" asp-page="/Account/Login" class="navbar__link">
          <i data-feather="user-check"></i><span>Login</span></a>
    </li>
}
