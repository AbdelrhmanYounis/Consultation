@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var user = UserManager.GetUserAsync(User).Result;
}
<div class="homePageText mt-5">
@if (SignInManager.IsSignedIn(User))
{
    <h1> Welcome  @user.FirstName @user.LastName <br/> 
        
                        @if (user.ProfilePicture != null)
                       {            
              <img class="rounded-circle" src="data:image/*;base64,
                            @(Convert.ToBase64String(user.ProfilePicture))" alt="">
                    }
                    else{
                        <img class="rounded-circle" src="~/Images/user.png" alt="">
                    }
                    <i class="fa fa-heartbeat"></i>
                    <br/>
                    nice log-in  </h1>
}
else
{ 
    <h1>take  counsel or <br/> give it
       <i class="fa fa-street-view"></i></h1> 
}
</div>